#!/bin/sh

icon="^b#282828^^c#dfdfdf^ ï‡ž ^d^ "
total=$(free -h | awk '/^Mem:/ {print  $3/$2}')
percent=$(printf %-4s $total | tr ' ' '0')
percent=$(echo $percent | sed -e 's/^0//g')
percent=$(echo $percent | sed -e 's/\.//g')
percent=$(printf %3s $(echo $percent | cut -c1-2) | tr ' ' ' ')%
echo "$icon $percent"
